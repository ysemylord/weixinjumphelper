<?xml version="1.0" encoding="utf-8"?>
<com.plugin.xuyabo.weixingameplugin.PlugView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#af000000"
              android:orientation="vertical">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/positiveBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="显示"/>

       <Button
           android:id="@+id/negativeBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="隐藏"/>
       <Button
           android:text="变小"
           android:id="@+id/min_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <Button
           android:text="自动按下，需要root"
           android:textSize="10sp"
           android:id="@+id/auto_press_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorAccent"
            android:id="@+id/last_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="positiveBtn"/>
        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/now_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="positiveBtn"/>
    </LinearLayout>
        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/delate"
            android:textColor="@color/colorAccent"
            android:text="偏移"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</com.plugin.xuyabo.weixingameplugin.PlugView>